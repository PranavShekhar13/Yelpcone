<% include ../partials/header %>

	<div class="container main">
		<div class="row justify-content-center mt-4">
			<h1 class="text-center mb-4 new-campground-heading col-12">Edit Comment</h1>
			<form class="new-campground-form mt-2 col-md-8" action="/camp/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
				<div class="form-group">
					<label for="text">Comment:</label>
					<!-- comment[text] passes infor as object -->
					<textarea class="form-control" id="text" type="text" name="comment[text]"><%= comment.text %></textarea>
				</div>
				<button class="btn btn-primary btn-block submit" type="submit">Submit</button>
				<a href="/camp/campgrounds/<%= campground_id%>" class="btn btn-link btn-sm mt-2" role="button">Go Back</a>
			</form>

		</div>

<% include ../partials/footer %>
